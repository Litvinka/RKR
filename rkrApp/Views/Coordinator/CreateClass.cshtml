@model rkrApp.Models.Classes

@{
    ViewBag.Title = "";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-11">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    @Html.Action("_CreateOrEditClass")
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Добавить класс" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}