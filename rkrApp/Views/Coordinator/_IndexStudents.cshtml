@model IEnumerable<rkrApp.Models.Students>

<hr />

<h3>Список учащихся:</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.number_in_the_list)</th>
            <th>@Html.DisplayNameFor(model => model.level_edu)</th>
            <th>ФИО</th>
            <th>@Html.DisplayNameFor(model => model.mark_year)</th>
            <th>@Html.DisplayNameFor(model => model.mark_1semestr)</th>
            <th>@Html.DisplayNameFor(model => model.mark_2semestr)</th>
            @if (Model.Count() > 0 && Model.ElementAt(0).Classes.Subjects_Numbers.start > DateTime.Now)
            {
                <th>Действия</th>
            }
        </tr>
    </thead>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.number_in_the_list)
        </td>
        <td>
            @if (item.level_edu == false) { Write("базовый"); }
            else { Write("повышенный"); }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.surname) @Html.DisplayFor(modelItem => item.name) @Html.DisplayFor(modelItem => item.patronomic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark_year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark_1semestr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark_2semestr)
        </td>
        @if (item.Classes.Subjects_Numbers.start > DateTime.Now)
        {
            <td class="btn-group-xs">
                <a href="@Url.Action("EditStudent", "Coordinator", new { id = item.id })" class="btn btn-success school_btn">
                    <span class="glyphicon glyphicon-edit"> редактировать</span>
                </a>
                <a href="@Url.Action("DeleteStudent", "Coordinator", new { id = item.id })" class="DeleteStudent btn btn-danger school_btn">
                    <span class="glyphicon glyphicon-trash"> удалить</span>
                </a>
            </td>
        }
    </tr>
    }

</table>
