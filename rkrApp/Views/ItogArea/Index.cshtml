@model IEnumerable<rkrApp.Models.Results>

@{
    ViewBag.Title = "Расхождения в ответах";
}



<div class="row" id="area">
    <h3>Расхождения в ответах:</h3>
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Шифр</th>
                    <th>Вариант</th>
                    <th>№1</th>
                    <th>№2</th>
                    <th>№3</th>
                    <th>№4</th>
                    <th>№5</th>
                    <th>№6</th>
                    <th>№7</th>
                    <th>№8</th>
                    <th>№9</th>
                    <th>№10</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i=0;i<Model.Count();++i)
                {
                <tr>
                    <td>@Model.ElementAt(i).Students.cipher</td>
                    <td>@Model.ElementAt(i).getVariant()</td>
                    @if (Model.ElementAt(i).answer1 == ViewBag.r2[i].answer1){<td>@Model.ElementAt(i).answer1</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer1 / @ViewBag.r2[i].answer1</td>}
                    @if (Model.ElementAt(i).answer2 == ViewBag.r2[i].answer2){<td>@Model.ElementAt(i).answer2</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer2 / @ViewBag.r2[i].answer2</td>}
                    @if (Model.ElementAt(i).answer3 == ViewBag.r2[i].answer3){<td>@Model.ElementAt(i).answer3</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer3 / @ViewBag.r2[i].answer3</td>}
                    @if (Model.ElementAt(i).answer4 == ViewBag.r2[i].answer4){<td>@Model.ElementAt(i).answer4</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer4 / @ViewBag.r2[i].answer4</td>}
                    @if (Model.ElementAt(i).answer5 == ViewBag.r2[i].answer5){<td>@Model.ElementAt(i).answer5</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer5 / @ViewBag.r2[i].answer5</td>}
                    @if (Model.ElementAt(i).answer6 == ViewBag.r2[i].answer6){<td>@Model.ElementAt(i).answer6</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer6 / @ViewBag.r2[i].answer6</td>}
                    @if (Model.ElementAt(i).answer7 == ViewBag.r2[i].answer7){<td>@Model.ElementAt(i).answer7</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer7 / @ViewBag.r2[i].answer7</td>}
                    @if (Model.ElementAt(i).answer8 == ViewBag.r2[i].answer8){<td>@Model.ElementAt(i).answer8</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer8 / @ViewBag.r2[i].answer8</td>}
                    @if (Model.ElementAt(i).answer9 == ViewBag.r2[i].answer9){<td>@Model.ElementAt(i).answer9</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer9 / @ViewBag.r2[i].answer9</td>}
                    @if (Model.ElementAt(i).answer10 == ViewBag.r2[i].answer10){<td>@Model.ElementAt(i).answer10</td> }
                    else{<td style="color:red;font-weight:bold">@Model.ElementAt(i).answer10 / @ViewBag.r2[i].answer10</td>}
                    <td class="btn-group-xs">
                        <a href="@Url.Action("Create", "ItogArea", new { student=Model.ElementAt(i).id_student })" type="button" class="btn btn-success">
                            <span class="glyphicon glyphicon-edit"> исправить расхождения</span>
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    @Html.Action("_Corrected", "ItogArea")
 
</div>


