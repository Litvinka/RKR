@model rkrApp.Models.Documents

@{
    ViewBag.Title = "Редактирование файла";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <h3>Добавить файл:</h3>
            @using (Html.BeginForm(Html.BeginForm("EditFile", "nio", FormMethod.Post, new { enctype = "multipart/form-data" })))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.HiddenFor(model=>model.id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.name, "Название", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", required = true } })
                            @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Текущий файл:</label>
                        <div class="col-md-10">
                            <a href="@Model.path">@Model.name</a>
                            @Html.HiddenFor(model => model.path)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Выберите новый файл</label>
                        <div class="col-md-10">
                            <input class="form-control" type="file" name="file" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.id_subject_number, "Предмет", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("id_subject_number", null, htmlAttributes: new { @class = "form-control", required = true })
                            @Html.ValidationMessageFor(model => model.id_subject_number, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.id_type_document, "Тип документа", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("id_type_document", null, htmlAttributes: new { @class = "form-control", required = true })
                            @Html.ValidationMessageFor(model => model.id_type_document, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Сохранить" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>