@model IEnumerable<rkrApp.Models.Classes>

@{
    ViewBag.Title = "Классы";
}

<div class="container">
    <a href="/RegionCoordinator/Index" class="btn btn-default">Назад</a>
    @if (Model.Count() > 0){<h3> @Model.ElementAt(0).Schools.name </h3>}
    <div class="row" id="div_classes">
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <h4>@item.Subjects_Numbers.number @item.letter класс (@item.count учащихся, @item.Subjects_Numbers.subject)</h4>
                @Html.Action("Students", "RegionCoordinator",new {id=item.id})
            </div>
        }
    </div>
</div>