@model rkrApp.Models.Districts_Check

                    <div class="form-group">
                        <label class="control-label col-sm-2 col-md-2" for="area">Область:</label>
                        <p class="col-sm-10 col-md-10">
                            @Html.DropDownList("area_dst", null, "", htmlAttributes: new { @class = "form-control", required=true })
                            @Html.ValidationMessageFor(model => model.Districts.Area, "", new { @class = "text-danger" })
                        </p>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 col-md-2" for="id_district">Район:</label>
                        <p class="col-sm-10 col-md-10">
                            @Html.DropDownList("district_dst", null, "", htmlAttributes: new { @class = "form-control", required = true })
                            @Html.ValidationMessageFor(model => model.id_district, "", new { @class = "text-danger" })
                        </p>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 col-md-2" for="class">Предмет:</label>
                        <p class="col-sm-10 col-md-10">
                            @Html.DropDownList("subject_dst", null, "", htmlAttributes: new { @class = "form-control", required = true })
                            @Html.ValidationMessageFor(model => model.id_subject_number, "", new { @class = "text-danger" })
                        </p>
                    </div>

