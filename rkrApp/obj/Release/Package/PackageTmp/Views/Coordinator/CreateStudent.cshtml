@model rkrApp.Models.Students

@{
    ViewBag.Title = "Добавление учащихся";
}
<div id='confirm'>
    <div class='header'><span>Удаление</span></div>
    <div class="message">Вы уверены, что хотите удалить данную запись?</div>
    <div class='buttons'>
        <div class='no simplemodal-close btn btn-danger float-left'>Нет</div><div class='yes btn btn-success float-right'>Да</div>
    </div>
</div>
<div style='display:none'>
    <img src='/img/confirm/header.gif' alt='' />
    <img src='/img/confirm/button.gif' alt='' />
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-11">
            @using (Html.BeginForm())
            {

                @Html.Action("_DetailsClass")

                if (ViewBag.time > DateTime.Now)
                {

                    <h3 class="school_btn">Добавить учащихся:</h3>
                    @Html.AntiForgeryToken()
                    


                    <div class="form-horizontal school_btn">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                        <div class="form-group">
                            @Html.LabelFor(model => model.number_in_the_list, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.EditorFor(model => model.number_in_the_list, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.number_in_the_list, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.surname, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.patronomic, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.EditorFor(model => model.patronomic, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.patronomic, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.id_gender, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.DropDownList("id_gender", null, "", htmlAttributes: new { @class = "form-control", required = true })
                                @Html.ValidationMessageFor(model => model.id_gender, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Уровень</label>
                            <div class="col-sm-10 col-md-10">
                                <select class="form-control" name="level_edu">
                                    <option value="false">базовый</option>
                                    <option value="true">повышенный</option>
                                </select>
                            </div>
                        </div>

                        <p>Отметки по учебному предмету за:</p>
                        <div class="form-group">
                            @Html.LabelFor(model => model.mark_year, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.EditorFor(model => model.mark_year, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.mark_year, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.mark_1semestr, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.EditorFor(model => model.mark_1semestr, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.mark_1semestr, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.mark_2semestr, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-sm-10 col-md-10">
                                @Html.EditorFor(model => model.mark_2semestr, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.mark_2semestr, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Сохранить" class="btn btn-success" />
                            </div>
                        </div>
                    </div>

                }
            }

            @Html.Action("_IndexStudents", "Coordinator")
        </div>
    </div>
</div>
