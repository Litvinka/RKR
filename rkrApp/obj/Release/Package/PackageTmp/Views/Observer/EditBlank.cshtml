@model rkrApp.Models.Students

@{
    ViewBag.Title = "Редактирование шифра для ученика "+ Model.allname;
}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-11">
            <h3>Редактировать бланк результатов для @Model.cipher</h3>

            <p><img class="img-responsive cipher" src="@Model.scan" /></p>

            <form class="form-horizontal" method="post" enctype="multipart/form-data">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)
                    <div class="form-group">
                        @Html.LabelFor(model => model.scan, htmlAttributes: new { @class = "control-label col-sm-2 col-md-2" })
                        <div class="col-md-10">
                            <input type="file" name="file" id="file" accept="image/jpeg,image/jpg">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Сохранить" class="btn btn-success" />
                        </div>
                    </div>
                </div>
             </form>

        </div>
    </div>
</div>