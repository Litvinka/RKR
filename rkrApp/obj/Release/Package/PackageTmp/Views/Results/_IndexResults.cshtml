@model IEnumerable<rkrApp.Models.Results>
<div id='confirm'>
    <div class='header'><span>Удаление</span></div>
    <div class="message">Вы уверены, что хотите удалить данную запись?</div>
    <div class='buttons'>
        <div class='no simplemodal-close btn btn-danger float-left'>Нет</div><div class='yes btn btn-success float-right'>Да</div>
    </div>
</div>
<div style='display:none'>
    <img src='/img/confirm/header.gif' alt='' />
    <img src='/img/confirm/button.gif' alt='' />
</div>
<div class="col-md-12">
    <h3>Список результатов</h3>
    <table  id="all_users_site" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Students.cipher)</th>
                @*<th>@Html.DisplayNameFor(model => model.variant)</th>*@
                <th>@Html.DisplayNameFor(model => model.answer1)</th>
                <th>@Html.DisplayNameFor(model => model.answer2)</th>
                <th>@Html.DisplayNameFor(model => model.answer3)</th>
                <th>@Html.DisplayNameFor(model => model.answer4)</th>
                <th>@Html.DisplayNameFor(model => model.answer5)</th>
                <th>@Html.DisplayNameFor(model => model.answer6)</th>
                <th>@Html.DisplayNameFor(model => model.answer7)</th>
                <th>@Html.DisplayNameFor(model => model.answer8)</th>
                <th>@Html.DisplayNameFor(model => model.answer9)</th>
                <th>@Html.DisplayNameFor(model => model.answer10)</th>
                <th>@Html.DisplayNameFor(model => model.SumOfScores)</th>
                <th>@Html.DisplayNameFor(model => model.Mark)</th>
                <th>@Html.DisplayNameFor(model => model.Level)</th>
                @if (ViewBag.finish >= DateTime.Now)
                {
                <th>Действия</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Students.cipher)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.cipher.ToList().Last().ToString())
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.answer1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer2)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer3)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer4)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer5)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer6)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer7)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer8)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer9)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.answer10)
                    </td>
                    <td>
                        @Convert.ToInt32(Math.Round(item.SumOfScores, 0, MidpointRounding.AwayFromZero))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mark)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    @if(ViewBag.finish >= DateTime.Now)
                    {
                    <td class="btn-group-xs">
                        <a href="@Url.Action("EditResultAfter", "Results", new { id = item.id })" class="btn btn-success result_btn">
                            <span class="glyphicon glyphicon-edit"> редактировать</span>
                        </a>
                        <a href="@Url.Action("DeleteResult", "Results", new { id = item.id })" class="DeleteResult btn btn-danger result_btn">
                            <span class="glyphicon glyphicon-trash"> удалить</span>
                        </a>
                    </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>