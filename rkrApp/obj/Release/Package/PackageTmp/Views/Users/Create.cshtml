@model rkrApp.Models.Users

@{
    ViewBag.Title = "Добавление нового пользователя";
}


<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <h3>Добавить пользователя:</h3>
            @using (Html.BeginForm())
            {
                Html.ValidationSummary(true);
                
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2" for="surname">Фамилия:</label>
                    <p class="col-sm-10 col-md-10">
                        @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
                    </p>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2" for="name">Имя:</label>
                    <p class="col-sm-10 col-md-10">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </p>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2" for="patronumic">Отчество:</label>
                    <p class="col-sm-10 col-md-10">
                        @Html.EditorFor(model => model.patronymic, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.patronymic, "", new { @class = "text-danger" })
                    </p>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2" for="email">Email:</label>
                    <p class="col-md-10">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </p>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2 col-md-2" for="role">Роль:</label>
                    <p class="col-sm-10 col-md-10">
                        @Html.DropDownList("id_role", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.id_role, "", new { @class = "text-danger" })
                    </p>
                </div>

                <div id="zavuch">
                    @Html.Action("_Zavuch", "Users")
                </div>

                <div id="watcher">
                    @Html.Action("_Watcher", "Users")
                </div>

                <div id="areaCheck">
                    <div class="form-group">
                        <label class="control-label col-sm-2 col-md-2" for="role">Область:</label>
                        <p class="col-sm-10 col-md-10">
                            @Html.DropDownList("areas", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_role, "", new { @class = "text-danger" })
                        </p>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2 col-md-2" for="role">Предмет:</label>
                        <p class="col-sm-10 col-md-10">
                            @Html.DropDownList("subjects", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_role, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>

                <div id="region">
                    <div class="form-group">
                        <label class="control-label col-sm-2 col-md-2" for="role">Область:</label>
                        <p class="col-sm-10 col-md-10">
                            @Html.DropDownList("areas1", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.id_role, "", new { @class = "text-danger" })
                        </p>
                    </div>
                </div>

                <div id="districtCheck">
                    @Html.Action("_District", "Users")
                </div>


                    @*
                        <div class="form-group">
                            <label class="control-label col-sm-2 col-md-2" for="letter">Буква класса:</label>
                            <div class="col-sm-10 col-md-10">
                                <p class="checkbox">
                                    <label><input type="checkbox" value="1">А</label>
                                </p>
                                <p class="checkbox">
                                    <label><input type="checkbox" value="2">Б</label>
                                </p>
                            </div>
                        </div>*@
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Добавить</button>
                        </div>
                    </div>
                    }
                </div>
    </div>
</div>

